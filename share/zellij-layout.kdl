layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    
    tab name="Claude" focus=true {
        pane command="claude"
    }
    
    tab name="Editor" {
        pane edit="."
    }
    
    tab name="Terminal" {
        pane
    }

    tab name="Web server" {
        pane command="bin/dev"
    }
}
